<%= simple_form_for @ad do |f| %>
	<%= f.input :title %>
	<%= f.input :category_id, collection: @categories %>
	<%= f.input :subcategory_id, collection: @subcategories %>
	<%= f.input :description %>
	<%= f.input :localization %>
	<%= f.input :phone %>
	<%= f.input :price %>
	<%= f.input :to_negotiation %>
	<%= f.input :picture, as: :file %>

	<%= f.button :submit %>
<% end %>